# SMAIT HRI v2.0 Configuration
# ==============================
# Copy this to .env and fill in your values

# LLM Backend
OPENAI_API_KEY=your_openai_key_here

# ASR Backend: parakeet_tdt (CUDA) or faster_whisper
SMAIT_ASR_BACKEND=parakeet_tdt

# Speaker Detection
SMAIT_ASD_BACKEND=laser

# Hardware
CAMERA_INDEX=0

# Debug
SMAIT_DEBUG=1
SMAIT_SHOW_VIDEO=1
